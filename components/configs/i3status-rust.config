[[block]]
block = "battery"
format = "$percentage $time"
full_format = "$percentage $time"
empty_format = "$percentage $time"
not_charging_format = "$percentage $time"
interval = 60

[[block]]
block = "cpu"
interval = 1
format = "CPU $utilization"

[[block]]
block = "disk_space"
path = "/"
format = "DISK $used/$total"

[[block]]
block = "external_ip"
format = "$version $ip"

[[block]]
block = "memory"
format = "MEM $mem_used/$mem_total"
format_alt = "SWAP $swap_used/$swap_total"
interval = 5

[[block]]
block = "net"
format = "AP $ssid {$ip|$ipv6} $signal_strength"
[[block.click]]
button = "left"
cmd = "alacritty -e nmtui"

[[block]]
block = "sound"

[[block]]
block = "backlight"
cycle = []
device = "intel_backlight"

[[block]]
block = "time"
format = " $timestamp.datetime(f:'%Y/%m/%d %H:%M:%S') "
timezone = "America/New_York"
interval = 1
