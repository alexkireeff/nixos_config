[[block]]
block = "battery"
format = "BAT $percentage {$time|} {$icon|}"
full_format = "BAT $percentage {$time|} {$icon|}"
empty_format = "BAT $percentage {$time|} {$icon|}"
not_charging_format = "BAT $percentage {$time|} {$icon|}"
interval = 60

[[block]]
block = "cpu"
interval = 1
format = "CPU $utilization"

[[block]]
block = "disk_space"
path = "/"
format = "DISK $used/$total"

[[block]]
block = "memory"
format = "MEM $mem_used/$mem_total"
format_alt = "SWP $swap_used/$swap_total"
interval = 5

[[block]]
block = "net"
format = "{AP $ssid|LAN} {$ip|$ipv6}{ $signal_strength|}"

[[block.click]]
button = "left"
cmd = "alacritty -e nmtui"

[[block]]
block = "sound"

[[block]]
block = "backlight"
cycle = [1, 100]
device = "intel_backlight"

[[block]]
block = "time"
format = " $timestamp.datetime(f:'%Y/%m/%d %H:%M:%S') "
timezone = "America/New_York"
interval = 1
