[[block]]
block = "battery"
driver = "sysfs"
interval = 60
format = "{percentage} {time}"
missing_format = ""

[[block]]
block = "cpu"
interval = 1
format = "{utilization}"

[[block]]
block = "disk_space"
path = "/"
format = "DISK {used}/{total}"

[[block]]
block = "external_ip"
format = "IP {ip}"

[[block]]
block = "memory"
format = "{mem_used}/{mem_total}"
format_alt = "{swap_used}/{swap_total}"
interval = 5

[[block]]
block = "net"
format = "AP {ssid} {strength}"
format_alt = "NET {name} {ap} {ips}"
[[block.click]]
button = "left"
cmd = "alacritty -e nmtui"

[[block]]
block = "sound"
format = "{volume}"

[[block]]
block = "backlight"
cycle = []
device = "intel_backlight"

[[block]]
block = "time"
format = "%Y/%m/%d %H:%M:%S"
timezone = "America/New_York"
interval = 1

